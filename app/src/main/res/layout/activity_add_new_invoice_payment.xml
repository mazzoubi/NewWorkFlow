<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Invoicecs.AddNewInvoicePaymentActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/tool"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/purple_500"
        android:layout_height="125dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/logo2"
                android:src="@mipmap/ic_launcher"
                android:layout_height="80dp"/>

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:layout_width="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/logo3"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_back"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:fontFamily="serif"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:text="معلومات النقطة"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tool"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:id="@+id/lay1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvpointName"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/btn_back4"
                    android:text="إسم النقطة"
                    android:textColor="@color/purple_500" />

                <TextView
                    android:id="@+id/textView"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="16dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:text="أسم النقطة"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:id="@+id/lay7"
                android:layout_below="@+id/lay1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvPointId"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/btn_back4"
                    android:text="إسم النقطة"
                    android:textColor="@color/purple_500" />

                <TextView
                    android:id="@+id/textView77"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="16dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:text="الرقم التعريفي"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:id="@+id/lay2"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/lay7"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:layout_below="@+id/lay2"
                android:id="@+id/lay3"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvSumUnpaid"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/btn_back4"
                    android:text="إسم النقطة"
                    android:textColor="@color/purple_500" />

                <TextView
                    android:id="@+id/textView7"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="16dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:text="مجموع الذمم"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:id="@+id/lay4"
                android:layout_below="@+id/lay3"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvClosedInvoice"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/btn_back4"
                    android:text="إسم النقطة"
                    android:textColor="@color/purple_500" />

                <TextView
                    android:id="@+id/textView8"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="16dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:text="عدد الفواتير المغلقة"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="12"
                android:id="@+id/lay5"
                android:layout_below="@+id/lay4"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvOpenInvoice"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/btn_back4"
                    android:text="إسم النقطة"
                    android:textColor="@color/purple_500" />

                <TextView
                    android:id="@+id/textView9"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:textSize="16dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:background="@color/purple_500"
                    android:layout_height="wrap_content"
                    android:text="عدد الفواتير المفتوحة"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:weightSum="3"
                android:id="@+id/lay6"
                android:layout_below="@+id/lay5"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="140dp">

                <Button
                    android:id="@+id/btnNewInv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.1"
                    android:background="@color/purple_700"
                    android:onClick="onClickAddInv"
                    android:fontFamily="serif"
                    android:text="فتح فاتوره جديده"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnBank"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.1"
                    android:background="@color/purple_700"
                    android:fontFamily="serif"
                    android:text="حوالة بنكية"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/txvDeptInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/txvDeptInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>